            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
            margin-bottom: 20px;
        }

        .post-card:hover {
            transform: translateY(-5px);
        }

        .post-card img {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }
    </style>
