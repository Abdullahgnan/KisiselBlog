<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogProject</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #fff9c4; /* Soluk sarı arka plan rengi */
        }
        .navbar {
            background-color: #fbc02d; /* Sarı renkli navigasyon çubuğu */
        }
        .navbar-brand, .nav-link {
            color: #ffffff; /* Beyaz metin rengi */
        }
        .navbar-brand:hover, .nav-link:hover {
            color: #000000; /* Siyah metin rengi üzerine gelindiğinde */
        }
        footer {
            background-color: #fbc02d; /* Sarı renkli alt bilgi kısmı */
            color: #ffffff; /* Beyaz metin rengi */
            padding: 10px 0;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <a class="navbar-brand" href="/">BlogProject</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="About" asp-action="Index">Ben Kimim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Experience" asp-action="Index">Deneyimlerim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Contact" asp-action="Index">İletişim</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()  <!-- Sayfa içeriği buraya render edilecek -->
    </div>

    <footer class="text-center mt-4">
        <p>&copy; 2024 - BlogProject</p>
    </footer>
    
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
